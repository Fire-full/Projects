----------------------------------------------------------------------------------------------------
Функ ВзятьПолеЧ Синоним GetFieldN (РабОбл:Вариант; Итер:Целое; Поле:Строка):Число;
 var ЗначениеЧисло  :Число;

   if VarType(РабОбл) = 6 then     --Объект
     --lValue = Вычислить("РабОбл.ItemsByNumber["+Стр(Итер)+"]."+Поле);
     ЗначениеЧисло = РабОбл.ItemsByNumber[Итер].GetField( Поле );
     Возврат ЗначениеЧисло;
   конец;

   ИзСтр( ЗначениеЧисло, ВзятьЗначениеПоля (РабОбл, Итер, Поле));
   Возврат ЗначениеЧисло ;

Кнуф;
