  proc СоздатьПанели;

    var Иконка: string;
    Иконка = BaseInfo.ProjectByName[Profile.ClassProject].Folder+"Приложения\Иконки\";

  extended СоздатьПанели;

-- Отдельная панель управления с двумя группами Журналы и Справочники.
    with КомандыУправления.ПанельКоманд.Добавить("ЗиК Гарнец","ZiK_Гарнец", Иконка+"\abacus",-90) do
      with ДобавитьГруппу("Справочники",,,60) do
        ДобавитьКоманды(["ZiK_Гарнец.Справочники.ЗВАНИЯ","-Первичные документы"]);
--        NewColumn = False;    -- Отображать в одной колонке
--        Width = 60;           -- Ширина колонки
      end;

      with ДобавитьГруппу("Документы") do
        ДобавитьКоманды(["ZiK_Гарнец.Справочники.ЗВАНИЯ","-Первичные документы"]);
--        NewColumn = False;    -- Отображать в одной колонке
--        Width = 60;           -- Ширина колонки
      end;
    end;
  end;

