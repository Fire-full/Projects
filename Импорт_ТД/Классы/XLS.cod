--Из Дельфи
func ExcelChar синоним НомерКолонкиВXLSформате (Num: Integer): string;
var  S: string;
var  I: Целое;
var  От : Число;
var  Отб: Число;
  S = "" ;
  От  = Num / 26  ;
  Отб = Отбр(От)  ;
  I   = Цел( Отб ) ;
  if Num > 26 then
      if От = Отб then  -- Делимое на 26 без остатка (52, 78, ...)
         I = I - 1;
      fi;
      S = Chr(I + 64) + Chr(Num - (I * 26) + 64) ;
  else
    S = Chr(Num + 64) ;
  fi;
  Result = S ;
end;
------------------------------------------------------------------------------------------
--Обратная  "ExcelChar"  Важно!!! Работает до "ZZ"!!!!!
func CharFromExcel синоним НомерКолонкиИзXLSформата (Буква: string) : Integer;
  var  S  : string;
  var  I  : Целое;

  var  X  : Integer;
  var  Z  : Integer;

    Z = Length(Буква);
    S = Буква;
    X = 0;
    if Z = 1 then
      X = Ord( S )-64;
    else
      для  I= Z..1  ШАГ -1 цикл
        if I = 1 then
          S   = SubStr(Буква, 1, 1);
          X = X  + (Ord( S )-64) * 26 ;
        else
          S = SubStr(Буква, I,1);
          X = Ord( S )-64 ;
        fi;
      конец;
    fi;
  Result = X ;
end;
