InObject Public

  Record :Импорт_ТД.Импорт_ТД.запМаркеры;

  proc Инициализировать synonym Init(
    аИмя        :String = 'Новый Маркер поиска данных ';
    аКод        :String = ''
  );
    var аИм  : String;
    var I,X  : Целое;
    Assert(Record.State = Kernel.Record.Created);
    with Record do
      if (Record.Код = '') then
        if (аКод <> '') then
          Record.Код = аКод;
        else
          аИм        = Стр(Record);
          I          = ПОЗ(":",аИм);
          X          = ПОЗ("}",аИм);
          Record.Код = ПодСтр(аИм, I+1, (X-1)-I );   -- "{Импорт_ТД.Импорт_ТД.запСоответствиеПолей:4}"
        end;
      end;
      if (Record.Имя = '') then
        if (аИмя <> '') then
          Имя = аИмя +" № "+ Код;
        else
          Имя = Код;
        end;
      end;
      Modified = False;
    end;
  end;

  proc ИнициализироватьПоУмолчанию synonym InitByDefault;
    Init(,);
  end;

